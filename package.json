{
  "name": "charta",
  "main": "./dist/main.js",
  "version": "1.0.5",
  "description": "Dev tool for smartcard/pos developers",
  "scripts": {
    "build": "tsc --build -clean && tsc",
    "watch": "tsc -w",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "start": "yarn run build && electron ./dist/main.js",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "files": [
      "./src/index.html",
      "./dist/*.js",
      "./dist/smartcard/*.js",
      "./dist/react-engine/*.js",
      "./dist/react-engine/chartaui/*.js"
    ],
    "appId": "dev.llabs.charta",
    "mac": {
      "category": "public.app-category.developer-tools"
    }
  },
  "repository": "https://github.com/lewixlabs/charta",
  "keywords": [
    "electorn",
    "typescript",
    "react",
    "boilerplate",
    "vscode",
    "debug"
  ],
  "author": "GitHub",
  "license": "MIT",
  "devDependencies": {
    "electron": "^7.1.2",
    "electron-builder": "^21.2.0",
    "electron-rebuild": "^1.8.8",
    "tslint": "^5.19.0",
    "typescript": "^3.7.2"
  },
  "dependencies": {
    "@types/react": "^16.9.11",
    "@types/react-dom": "^16.9.4",
    "prop-types": "^15.7.2",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "tscard": "^1.0.0",
    "react-desktop": "^0.3.9"
  }
}
