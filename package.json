{
  "name": "charta",
  "main": "./dist/main.js",
  "version": "1.0.25",
  "description": "Dev tool for smartcard/pos developers",
  "scripts": {
    "build": "tsc --build --clean && tsc",
    "watch": "tsc -w",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "start": "electron ./dist/main.js",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "directories": {
      "output": "electron-builder-dist",
      "buildResources": "build"
    },
    "files": [
      "./src/index.html",
      "./dist/*.js",
      "./dist/smartcard/*.js",
      "./dist/react-engine/*.js",
      "./dist/react-engine/chartaui/*.js",
      "./build/*.icns"
    ],
    "appId": "dev.llabs.charta",
    "mac": {
      "target": {
        "target": "default",
        "arch": [
          "x64",
          "arm64"
        ]
      },
      "category": "public.app-category.developer-tools",
      "icon": "./build/mac.icns"
    },
    "win": {
      "target": "appx",
      "icon": "credit-card.png"
    },
    "appx": {
      "backgroundColor": "#242424",
      "displayName": "Charta",
      "publisherDisplayName": "lewix.labs",
      "publisher": "XXXXXXXXXXXXXX",
      "identityName": "YYYYYYYYYYYYYYY",
      "applicationId": "lewix.labs.Charta"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "credit-card.png"
    }
  },
  "repository": "https://github.com/lewixlabs/charta",
  "keywords": [
    "smartcard",
    "apdu",
    "pos"
  ],
  "author": {
    "name": "lewix",
    "email": "lewixlabs@gmail.com"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/react": "16.14.0",
    "@types/react-dom": "^16.9.25",
    "@typescript-eslint/eslint-plugin": "^8.31.0",
    "@typescript-eslint/parser": "^8.31.0",
    "electron": "^35.7.5",
    "electron-builder": "^26.0.12",
    "eslint": "^9.25.1",
    "node-gyp": "^11.2.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "prop-types": "^15.8.1",
    "react": "^16.14.0",
    "react-desktop": "^0.3.9",
    "react-dom": "^16.14.0",
    "tscard": "^1.0.10"
  }
}
